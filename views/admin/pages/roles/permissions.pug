extends ../../layouts/default.pug

block main
  h1 #{pageTitle}

  div(class="text-right")
    button(
      type="submit"
      class="btn btn-primary mb-3"
      button-submit
      data-path=`/${prefixAdmin}/roles/permissions`
    ) Cập nhật

  table(
    class="table table-hover table-sm"
    table-permissions=records
  )
    thead
      tr
        th Tính năng
        each item in records
          th(class="text-center" role-id=item.id) #{item.title}
    tbody

      //- Tổng quan
      tr
        td(colspan="4")
          b Tổng quan
      tr(data-name="dashboard_view")
        td Xem
        each item in records
          td(class="text-center")
            input(type="checkbox" data-id=item.id)
      //- Hết Tổng quan

      //- Danh mục sản phẩm
      tr
        td(colspan="4")
          b Danh mục sản phẩm
      tr(data-name="products-category_view")
        td Xem
        each item in records
          td(class="text-center")
            input(type="checkbox" data-id=item.id)
      tr(data-name="products-category_create")
        td Thêm mới
        each item in records
          td(class="text-center")
            input(type="checkbox" data-id=item.id)
      tr(data-name="products-category_edit")
        td Chỉnh sửa
        each item in records
          td(class="text-center")
            input(type="checkbox" data-id=item.id)
      tr(data-name="products-category_delete")
        td Xóa
        each item in records
          td(class="text-center")
            input(type="checkbox" data-id=item.id)
      //- Hết Danh mục sản phẩm

      //- Sản phẩm
      tr
        td(colspan="4")
          b Sản phẩm
      tr(data-name="products_view")
