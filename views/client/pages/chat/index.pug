extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container.my-3
    .row
      .col-12
        +box-head("Chat")

    .row
      .col-12
        .chat(my-id=user.id)
          .inner-body
            each chat in chats
              div(
                class=(
                  user.id != chat.userId ?
                  "inner-incoming"
                  :
                  "inner-outgoing"
                )
              )
                if(user.id != chat.userId)
                  .inner-name #{chat.fullName}
                .inner-content
                  | #{chat.content}
