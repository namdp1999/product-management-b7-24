extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container.my-3

    include ../../partials/list-btn-users.pug

    .row
      .col-12
        +box-head(pageTitle)

    .row(list-accept-friends=user.id)
      each item in users
        .col-6(user-id=item.id)
          div(class="box-user")
            div(class="inner-avatar")
              img(
                src="https://robohash.org/hicveldicta.png"
                alt=item.fullName
              )
            div(class="inner-info")
              div(class="inner-name") #{item.fullName}
              div(class="inner-buttons")
                button(
                  class="btn btn-sm btn-primary mr-1"
                  btn-accept-friend=item.id
                ) Chấp nhận
                button(
                  class="btn btn-sm btn-secondary mr-1"
                  btn-refuse-friend=item.id
                ) Xóa
                button(
                  class="btn btn-sm btn-secondary mr-1"
                  btn-deleted-friend
                  disabled
                ) Đã xóa
                button(
                  class="btn btn-sm btn-primary mr-1"
                  btn-accepted-friend
                  disabled
                ) Đã chấp nhận
