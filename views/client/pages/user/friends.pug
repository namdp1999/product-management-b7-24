extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container.my-3

    include ../../partials/list-btn-users.pug

    .row
      .col-12
        +box-head(pageTitle)

    .row(list-friend)
      each item in users
        .col-6(user-id=item.id)
          div(class="box-user")
            div(class="inner-avatar")
              img(
                src="https://robohash.org/hicveldicta.png"
                alt=item.fullName
              )
            div(class="inner-info")
              div(class="inner-name") #{item.fullName}
              div(class="inner-buttons")
                button(
                  class="btn btn-sm btn-primary mr-1"
                ) Nhắn tin
                button(
                  class="btn btn-sm btn-secondary mr-1"
                ) Xóa
              div(
                class="inner-status"
                status=item.statusOnline
              ) <i class="fa-solid fa-circle"></i>
